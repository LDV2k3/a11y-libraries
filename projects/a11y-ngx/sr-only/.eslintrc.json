{
    "extends": "../../../.eslintrc.json",
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts"],
            "parserOptions": {
                "project": [
                    "projects/a11y-ngx/sr-only/tsconfig.lib.json",
                    "projects/a11y-ngx/sr-only/tsconfig.spec.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "a11y",
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "a11y",
                        "style": "kebab-case"
                    }
                ],
                "@typescript-eslint/no-empty-interface": "off",
                "@angular-eslint/no-input-rename": "off"
            }
        },
        {
            "files": ["*.html"],
            "rules": {}
        }
    ],
    "rules": {
        "@angular-eslint/no-host-metadata-property": "off"
    }
}
