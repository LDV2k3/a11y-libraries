{
    "extends": "../../../.eslintrc.json",
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts"],
            "parserOptions": {
                "project": [
                    "projects/a11y-ngx/dom-helper/tsconfig.lib.json",
                    "projects/a11y-ngx/dom-helper/tsconfig.spec.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "a11y",
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "a11y",
                        "style": "kebab-case"
                    }
                ]
            }
        },
        {
            "files": ["*.html"],
            "rules": {}
        }
    ]
}
